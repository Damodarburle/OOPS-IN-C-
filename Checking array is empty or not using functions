#include<iostream>
using namespace std;
bool isArrayEmpty(int arr[],int size){
    return size==0;
}

int main(){
    int n,arr[100];
    cout<<"Enter the size of an array:"<<endl;
    cin>>n;
    
    cout<<"Enter the elements into array:"<<endl;
    for(int i=0;i<n;i++) {
        cin>>arr[i];
    }
    
    if(isArrayEmpty(arr,n)){
        cout<<"The array is empty:"<<endl;
    }
    
    else{
        cout<<"The array is not empty"<<endl;
    }
    
    return 0;
}
